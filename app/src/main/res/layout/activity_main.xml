<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shree1.myapplication.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <fragment
                android:id="@+id/fragment13"
                android:name="com.example.shree1.myapplication.top_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:layout="@layout/top_section_fragment"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <fragment
                android:id="@+id/fragment14"
                android:name="com.example.shree1.myapplication.bottomPictureFragment"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_marginTop="80dp"
                android:layout_below="@+id/fragment13"
                android:layout_centerHorizontal="true"
                tools:layout="@layout/bottom_picture_fragment"></fragment>
                /*android:layout_alignBaseline="@+id/fragment13"
                android:layout_alignBottom="@+id/fragment13"
                android:layout_alignParentStart="true" *//

        </RelativeLayout>

    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
